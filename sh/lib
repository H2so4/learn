_notify()
{   #notify a msg
    [ -z "$1" ] && return 1

    if [ "$TERM" = linux ] || [ "$TERM" = dumb ]; then
        notify-send -t 3000 "${@}"
    else
        echo -n "${1}: "
        shift
        while [ -n "$*" ]
        do
            echo "${1}"
            shift
        done
    fi
}
#==================================================== Example ====
#_notify "You need html2text" "\$ sudo apt-get install html2text"
#=================================================================

_printtime()
{  #format seconds to a pretty string
    [ -z "$1" ] && return 1

    NUM=$1
    MIN=0
    HOUR=0
    DAY=0
    if ((NUM>59)); then
        ((SEC=NUM%60))
        ((NUM=NUM/60))
        if ((NUM>59)); then
            ((MIN=NUM%60))
            ((NUM=NUM/60))
            if ((NUM>23)); then
                ((HOUR=NUM%24))
                ((DAY=NUM/24))
            else
                ((HOUR=NUM))
            fi
        else
            ((MIN=NUM))
        fi
    else
        ((SEC=NUM))
    fi
    echo "$DAY"d "$HOUR"h "$MIN"m "$SEC"s
}
