_lock()
{
    exec 9>/tmp/$(basename $1).lock #verify only one instance is running
    if ! flock -n 9  ; then         #http://mywiki.wooledge.org/BashFAQ/045
        echo "$(basename $1): another instance is running";
        exit 1
    fi
}
#==================================================== Example ====
