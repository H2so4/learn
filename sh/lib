  #-h | --help | h | help ) _usage;;
#esac
#=================================================================

_waitfor()
{   #wait for a program, shows an animation
    [ -z "$1" ] && return 1

    echo -n "    $ $@ ..."
    $@ > /dev/null 2>&1 &
    sleep 1s

    running=$(pidof $1); running=$?
    if [ "$running" = 1 ]; then
        echo
    else
        pid=$(pidof $1)
        animation_state=1
        echo -e -n "    "

        while [ "`ps -p $pid -o comm=`" ]; do
            # rotating star
            echo -e -n "\b\b\b"
            case $animation_state in
                1)
                    echo -n "["
                    echo -n -e "\033[1m|\033[0m"
                    echo -n "]"
                    animation_state=2
                    ;;
                2)
                    echo -n "["
                    echo -n -e "\033[1m/\033[0m"
                    echo -n "]"
                    animation_state=3
                    ;;
                3)
                    echo -n "["
                    echo -n -e "\033[1m-\033[0m"
                    echo -n "]"
                    animation_state=4
                    ;;
                4)
                    echo -n "["
                    echo -n -e "\033[1m"
                    echo -n "\\"
                    echo -n -e "\033[0m"
                    echo -n "]"
                    animation_state=1
                    ;;
            esac
            sleep 1
        done
        echo -e "\b\b\b   "
        echo
    fi
}
#==================================================== Example ====
#_waitfor tar -jxpf file.tar.bz2
#=================================================================
